{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Pipe Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "/opt/app/build/src/tio",
      "cwd": "/opt/app/src/",
      "stopAtEntry": true,
      "args": ["/dev/tty/stderr", "--log", "--log-append"],
      // "logging": {
      //     "engineLogging": true,
      //     "exceptions": true,
      //     "moduleLoad": false,
      //     "programOutput": false,
      //     "trace": false,
      //     "traceResponse": false,
      // },
      "environment": [],
      "externalConsole": true,
      "pipeTransport": {
          "debuggerPath": "/usr/bin/gdb",
          "pipeProgram": "docker",
          "pipeArgs": [
              "compose",
              "run",
              "meson",
              "sh",
              "-c"
          ],
          "pipeCwd": "${workspaceRoot}/src/"
      },
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          }
      ],
      "sourceFileMap": {
          "/opt/app/": "${workspaceRoot}"
      }
  },
  ]
}